{
    "compilerOptions": {
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "outDir": "dest/",
        "rootDir": "src/",
        
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": false,
        
        "preserveConstEnums": true,
        "pretty": true,
        "target": "ES2017",

        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]    
}